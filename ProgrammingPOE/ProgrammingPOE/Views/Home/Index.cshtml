@{
    ViewData["Title"] = "Claims Management System";
}

<div class="text-center hero-section">
    <div class="hero-background">
        <h1 class="display-4 mb-4 text-white">Welcome to Claims Management System</h1>
        <p class="lead text-white mb-5">Streamline your academic claims process with our secure platform</p>
    </div>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4 mb-4">
                <div class="card role-card h-100 shadow">
                    <div class="card-body text-center p-4">
                        <div class="role-icon mb-3">
                            <i class="fas fa-chalkboard-teacher fa-3x text-primary"></i>
                        </div>
                        <h4 class="card-title">👨‍🏫 Lecturer</h4>
                        <p class="card-text">Submit claims, upload documents, and track your claim status throughout the approval process.</p>
                        <a href="@Url.Action("Login", "Account", new { role = "Lecturer" })" class="btn btn-primary btn-lg w-100">
                            Enter as Lecturer
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card role-card h-100 shadow">
                    <div class="card-body text-center p-4">
                        <div class="role-icon mb-3">
                            <i class="fas fa-user-tie fa-3x text-warning"></i>
                        </div>
                        <h4 class="card-title">👔 Coordinator</h4>
                        <p class="card-text">Verify and review claims submitted by lecturers in your programme.</p>
                        <a href="@Url.Action("Login", "Account", new { role = "Coordinator" })" class="btn btn-warning btn-lg w-100">
                            Enter as Coordinator
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card role-card h-100 shadow">
                    <div class="card-body text-center p-4">
                        <div class="role-icon mb-3">
                            <i class="fas fa-briefcase fa-3x text-success"></i>
                        </div>
                        <h4 class="card-title">💼 Manager</h4>
                        <p class="card-text">Approve or reject verified claims and manage the overall claims process.</p>
                        <a href="@Url.Action("Login", "Account", new { role = "Manager" })" class="btn btn-success btn-lg w-100">
                            Enter as Manager
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-8 offset-md-2">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5>New to the system?</h5>
                        <p class="mb-3">Register for an account to get started</p>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-outline-primary">Create Account</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 0;
    }

    .hero-background {
        background: rgba(0, 0, 0, 0.4);
        padding: 100px 20px 80px 20px;
    }

    .role-card {
        border: none;
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .role-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2) !important;
        }

    .role-icon {
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">