@{
    ViewData["Title"] = "My Claims";
}

<div class="container">
    <h2>My Claims</h2>
    <p class="text-muted">View the history and status of your submitted claims</p>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Submit New Claim
        </a>
        <div class="btn-group">
            <button type="button" class="btn btn-outline-secondary">All</button>
            <button type="button" class="btn btn-outline-secondary">Pending</button>
            <button type="button" class="btn btn-outline-secondary">Approved</button>
            <button type="button" class="btn btn-outline-secondary">Rejected</button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Claim ID</th>
                    <th>Month</th>
                    <th>Hours</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Submitted</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>CLM-1025</td>
                    <td>March 2025</td>
                    <td>45</td>
                    <td>R12,375.00</td>
                    <td><span class="badge bg-success">Approved</span></td>
                    <td>05 Apr 2025</td>
                    <td>
                        <a asp-action="Details" asp-route-id="1" class="btn btn-sm btn-info">View</a>
                    </td>
                </tr>
                <tr>
                    <td>CLM-1024</td>
                    <td>February 2025</td>
                    <td>38</td>
                    <td>R10,450.00</td>
                    <td><span class="badge bg-success">Approved</span></td>
                    <td>03 Mar 2025</td>
                    <td>
                        <a asp-action="Details" asp-route-id="2" class="btn btn-sm btn-info">View</a>
                    </td>
                </tr>
                <tr>
                    <td>CLM-1023</td>
                    <td>January 2025</td>
                    <td>42</td>
                    <td>R11,550.00</td>
                    <td><span class="badge bg-warning">Pending</span></td>
                    <td>02 Feb 2025</td>
                    <td>
                        <a asp-action="Details" asp-route-id="3" class="btn btn-sm btn-info">View</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>