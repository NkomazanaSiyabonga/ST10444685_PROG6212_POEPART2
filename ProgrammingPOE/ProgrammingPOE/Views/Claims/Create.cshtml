@{
    ViewData["Title"] = "Submit New Claim";
}

<div class="container">
    <h2>Submit New Claim</h2>
    <p class="text-muted">Complete the form below to submit your monthly claim</p>

    <div class="row">
        <div class="col-md-8">
            <form>
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Claim Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="claimMonth" class="form-label">Claim Month</label>
                            <input type="month" class="form-control" id="claimMonth" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Claim Items</label>
                            <div class="table-responsive">
                                <table class="table table-bordered" id="claimItems">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Hours</th>
                                            <th>Description</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><input type="date" class="form-control" name="itemDate"></td>
                                            <td><input type="number" class="form-control" name="itemHours" step="0.5" min="0"></td>
                                            <td><input type="text" class="form-control" name="itemDescription"></td>
                                            <td><button type="button" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <button type="button" class="btn btn-secondary mt-2" id="addItem">
                                <i class="fas fa-plus me-1"></i> Add Item
                            </button>
                        </div>

                        <div class="mb-3">
                            <label for="totalHours" class="form-label">Total Hours</label>
                            <input type="text" class="form-control" id="totalHours" readonly value="0">
                        </div>

                        <div class="mb-3">
                            <label for="totalAmount" class="form-label">Total Amount</label>
                            <input type="text" class="form-control" id="totalAmount" readonly value="R0.00">
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Supporting Documents</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="supportingDocs" class="form-label">Upload supporting documents</label>
                            <input class="form-control" type="file" id="supportingDocs" multiple>
                            <div class="form-text">Upload timesheets, signed contracts, or other supporting documents (PDF, JPEG, PNG)</div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="button" class="btn btn-secondary me-md-2">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit Claim</button>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Claim Guidelines</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Submit claims by the 5th of each month</li>
                        <li class="list-group-item">Include all supporting documentation</li>
                        <li class="list-group-item">Ensure hours are accurately recorded</li>
                        <li class="list-group-item">Claims will be processed within 14 working days</li>
                        <li class="list-group-item">Contact your coordinator for questions</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Script to add new claim items
        document.getElementById('addItem').addEventListener('click', function() {
            const tbody = document.querySelector('#claimItems tbody');
            const newRow = document.createElement('tr');
            newRow.innerHTML = `
                <td><input type="date" class="form-control" name="itemDate"></td>
                <td><input type="number" class="form-control" name="itemHours" step="0.5" min="0"></td>
                <td><input type="text" class="form-control" name="itemDescription"></td>
                <td><button type="button" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button></td>
            `;
            tbody.appendChild(newRow);

            // Add event listener to the new delete button
            newRow.querySelector('.btn-danger').addEventListener('click', function() {
                tbody.removeChild(newRow);
            });
        });
    </script>
}